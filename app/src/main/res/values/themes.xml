<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.M_2090_3" parent="Theme.Material3.DayNight.NoActionBar">

                <!-- Primary brand color. -->
<!--                <item name="colorPrimary">#763BFF</item>-->
                <item name="colorPrimaryVariant">@color/purple_700</item>
                <item name="colorOnPrimary">@color/white</item>
         Secondary brand color.
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF0101</item>
        <item name="colorOnSurface">#FF0101</item>

        <item name="colorOnSecondaryContainer">#FF0101</item>
        <item name="colorPrimaryContainer">#FF0101</item>
        <item name="colorSurface">#FF0101</item>
        <item name="colorOnSurfaceVariant">#FF0101</item>
